    "new_driver_complete_journey": {
      "entry": "Landing page > 'I want to become a driver'",
      "path": [
        "Landing > Drivers page",
        "Read eligibility (30 sec)",
        "Check costs and timeline (30 sec)",
        "Optional: Check convictions (if applicable) > Information page > Conviction checker (2 min)",
        "Return to Drivers page",
        "Review process checklist (2 min)",
        "Read safeguarding duties (NEW v2 - 1 min)",
        "Book English test (exit to phone)",
        "Work through checklist over 6-12 weeks",
        "Submit application (exit to My Gloucester)"
      ],
      "success_metric": "70%+ application completion rate"
    },
    "renewal_quick_journey": {
      "entry": "Landing page > 'I need to renew' OR email reminder",
      "path": [
        "Landing > Drivers page > Renewal tab",
