  "webmap_metadata": {
    "version": "2.1.0",
    "created": "2025-02-02",
    "updated": "2025-02-02",
    "service": "taxi-licensing",
    "service_schema_reference": "taxi_licensing_schema.json v1.0.0",
    "site_purpose": "Enable taxi and private hire drivers, vehicle owners, and operators to understand requirements and complete licensing processes online",
    "coverage": "95% of schema - all user-facing content plus transparency/governance sections",
    "design_principles": [
      "Mobile-first (70%+ mobile traffic expected)",
      "Task-based not org-chart-based structure",
      "Progressive disclosure - simple to complex",
      "Plain English - assume ESL users",
      "Visual communication - photos, diagrams, icons",
      "2 clicks maximum to any task",
      "Single source of truth - all content from schema",
      "Transparency by default - GDPR, safeguarding, accountability"
    ]
  },
  "site_structure": {
    "total_pages": 5,
    "navigation_model": "hub and spoke",
    "max_depth": 2,
    "pages": [
      {
        "page_id": "landing",
        "url": "/licensing/taxis",
        "title": "Taxi and Private Hire Licensing",
        "purpose": "Fast triage to correct journey",
        "target_time": "30 seconds",
        "schema_coverage": [
          "package_identity",
          "service_overview",
          "licence_types (overview)",
          "key_differences"
        ]
      },
      {
        "page_id": "drivers",
